<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Кнопка для показа всех записей -->
        <Button
            android:id="@+id/btnShowRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Показать записи" />

        <!-- Блок для вставки новой записи -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить новую запись:"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Фамилия" />

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя" />

        <EditText
            android:id="@+id/etMiddleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Отчество" />

        <EditText
            android:id="@+id/etBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Дата рождения (ГГГГ-ММ-ДД)" />

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Номер телефона"
            android:inputType="phone" />

        <!-- Новые поля -->
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Адрес" />

        <EditText
            android:id="@+id/etYearConclusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Год заключения договора"
            android:inputType="number" />

        <EditText
            android:id="@+id/etTariffName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название тарифа" />

        <EditText
            android:id="@+id/etTariffCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Стоимость тарифа" />

        <Button
            android:id="@+id/btnAddRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить запись"
            android:layout_marginTop="8dp" />

        <!-- Блок для обновления записи (обновляем, например, номер телефона) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обновить запись:"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etUpdateId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID записи для обновления"
            android:inputType="number" />

        <EditText
            android:id="@+id/etNewPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Новый номер телефона"
            android:inputType="phone" />

        <Button
            android:id="@+id/btnUpdateRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обновить запись"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
